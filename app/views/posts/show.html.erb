<div class="row mt-3 full-black">
  <div class="col-md-3 text-center pt-4">
    <%= link_to "<img src='#{@post.author.image_url}' alt='profile image'>".html_safe, user_path(@post.author) %>
    <p class="mt-3"><%= @post.author.full_name %><br><%= @post.created_at.to_time.utc.to_s %></p>
    <% if current_user == @post.author %>
      <p>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
      <%= link_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-danger' %>
      </p>
    <% end %>
  </div>
  <div class="col-md-9 full-white post-info pl-4">
    <h1 class="text-center mb-3"><%= @post.title %></h1>
    <div class="post-content"><%= simple_format(@post.content) %></div>
  </div>
</div>
