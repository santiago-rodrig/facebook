<h1 class="text-center mb-3">Creating a post</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@post, html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <div>
          <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <div>
          <%= f.text_area :content, class: 'form-control', rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.button 'Create post', class: 'btn btn-success' %>
      </div>
    <% end %>
    <%= link_to 'Back', :back %>
  </div>
</div>
