<div class="well">
  <%= link_to "<img src='#{post.author.image_url + '?s=50'}' alt='profile image' class='pull-left mr-2 img-thumbnail'>".html_safe, user_path(post.author) %>
  <p><%= post.author.full_name %><br><%= post.created_at.to_time.utc.to_s %></p>
  <%= link_to "<h3 class='clear-left mt-3'>#{post.title}</h3>".html_safe, post_path(post) %>
  <p><%= truncate(post.content, length: 300) %></p>
  <div class="like-count">
    <div>
      <span class='glyphicon glyphicon-thumbs-up' aria-hidden='true'</span>
    </div>
    <div>
      <span class="badge"><%= post.likers.count %></span>
    </div>
  </div>
</div>
