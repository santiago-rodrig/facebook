<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center mb-3">Edit user information</h1>
    <%= form_for(@user, html: { role: 'form' }) do |f| %>
      <div class="field form-group">
        <%= f.label :first_name %>
        <div>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :last_name %>
        <div>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :gender %>
        <div>
          <%= f.select :gender, [['male', 'male'], ['female', 'female'], ['other', 'other']], { include_blank: true },  class: 'form-control' %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :phone %>
        <div>
          <%= f.telephone_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :birthday %>
        <div>
          <%= f.date_field :birthday, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.button "Update user information", class: 'btn btn-success' %>
      </div>
    <% end %>
    <%= link_to 'Back', :back %>
  </div>
</div>

