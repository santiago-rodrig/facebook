<div class="row mt-5">
  <div class="col-md-6 col-md-offset-3 full-white pb-4 pt-2 rounded-corners">
    <h2 class="text-center mb-3">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="actions col-md-10 col-md-offset-2">
          <%= f.button "Log in", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <hr>
    <%= render "devise/shared/links" %>
  </div>
</div>
